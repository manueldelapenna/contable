{% extends 'base.html.twig' %}

{% block body %}
    <h1>Debitnote</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ debitNote.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if debitNote.date %}{{ debitNote.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Subtotal</th>
                <td>{{ debitNote.subtotal }}</td>
            </tr>
            <tr>
                <th>Discountamount</th>
                <td>{{ debitNote.discountAmount }}</td>
            </tr>
            <tr>
                <th>Shippingamount</th>
                <td>{{ debitNote.shippingAmount }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ debitNote.total }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('debitnote_index') }}">Back to the list</a>
        </li>

    </ul>
{% endblock %}
